{
  "name": "prisma-searchparams-mapper",
  "version": "0.1.0",
  "description": "Convert URLSearchParams <-> Prisma queries (where, orderBy, pagination) for Next.js / Remix apps.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "husky",
    "test": "vitest --run",
    "test:watch": "vitest",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write ."
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "keywords": [
    "prisma",
    "searchparams",
    "query",
    "nextjs",
    "remix",
    "typescript",
    "mapper"
  ],
  "author": "Nicolas Bocquet",
  "license": "MIT",
  "peerDependencies": {
    "@prisma/client": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "@prisma/client": {
      "optional": true
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@prisma/client": "^5.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prisma": "^5.0.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.1"
  }
}
